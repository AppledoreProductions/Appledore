@using HolmesMVC
@model List<HolmesMVC.Models.Actor>

played by: @if (Model.Count() > 1)
                               {
                                   var links = "";
                                   foreach (var h in Model)
                                   {
                                       links += Html.ActionLink(h.ShortName, "Details", "Actor", new { h.UrlName }, null) + ", ";
                                   }
                                   links = links.Substring(0, links.Length - 2);
        @Html.Raw(links)
                               }
                               else if (Model.Count() == 1)
                               {
        @Html.ActionLink(Model.First().ShortName, "Details", "Actor", new { Model.First().UrlName }, null)
                               }

@using HolmesMVC;
@using HolmesMVC.Enums
@model HolmesMVC.Models.ViewModels.ActorHistory
@{
    var AirdateFormat = "{0:d MMM yyyy}";
    if (Model.AirdatePrecision == DatePrecision.Month)
    {
        AirdateFormat = "{0:MMM yyyy}";
    }
    else if (Model.AirdatePrecision == DatePrecision.Year)
    {
        AirdateFormat = "{0:yyyy}";
    }
}

<tr><td>@string.Format(AirdateFormat, Model.Airdate):</td><td>@Model.CharacterName</td><td>in @if (string.Equals(Model.AdaptName, Model.EpName)){<text>'@Html.RouteLink(Model.EpName, "EpDetails", new { adaptWord = Model.AdaptMediumUrlName, adaptName = Model.AdaptUrlName, seasonNumber = Model.SeasonAirOrder, episodeNumber = Model.AirOrder })'</text>}else{<text>@if (Model.Medium != (int)Medium.Film){<text>@Model.AdaptName @Model.SeasonCode</text>} '@Html.RouteLink(Model.EpName, "EpDetails", new { adaptWord = Model.AdaptMediumUrlName, adaptName = Model.AdaptUrlName, seasonNumber = Model.SeasonAirOrder, episodeNumber = Model.AirOrder })' @if (Model.EpTranslation != null && Model.EpTranslation != string.Empty) { <span style="font-weight: normal; font-size: small;"><i>@Model.EpTranslation</i></span> } </text>}</td></tr>
